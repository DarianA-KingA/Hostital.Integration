@model Hospital.Core.Models.SaveViewModel.SaveUpdatedUserViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form method="post" asp-controller="User" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Editar usuario
            </h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All" class="alert alert-danger" ></div> *@
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="mb-3 col-lg-6">
                <label asp-for="Name">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="LastName">Apellido</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="UserName">Nombre de usuario</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="PhoneNumber">Numero de telefono</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Birthday">Fecha de nacimiento</label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Cedula"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Address">Direccion</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div> 
            <div class="mb-3 col-lg-6">
                <label asp-for="RoleName">Rol</label>
                @Html.DropDownListFor(m => m.RoleName, (IEnumerable<SelectListItem>)ViewBag.Roles, "Elige un rol", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>