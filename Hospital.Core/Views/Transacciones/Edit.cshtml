@{
}
<form method="post" asp-controller="Transacciones" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Editar Transaccion
            </h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All" class="alert alert-danger" ></div> *@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Estado" />
        <div class="row">
            <div class="mb-3 col-lg-6">
                <label asp-for="IdCajero">Cajero</label>
                @Html.DropDownListFor(m => m.IdCajero, (IEnumerable<SelectListItem>)ViewBag.Cajeros, "Elige el cajero", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="IdCajero" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="IdPaciente">Paciente</label>
                @Html.DropDownListFor(m => m.IdPaciente, (IEnumerable<SelectListItem>)ViewBag.Pacientes, "Elige el paciente", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="IdTipoTransaccion">Tipo de transaccion</label>
                @Html.DropDownListFor(m => m.IdTipoTransaccion, (IEnumerable<SelectListItem>)ViewBag.TipoTransaccion, "Elige el tipo de transaccion", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="IdTipoTransaccion" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="IdEstadoTransaccion">Estado de transaccion</label>
                @Html.DropDownListFor(m => m.IdEstadoTransaccion, (IEnumerable<SelectListItem>)ViewBag.EstadoTransaccion, "Elige el estado de la transasccion", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="IdEstadoTransaccion" class="text-danger"></span>
            </div>
           @*  <div class="mb-3 col-lg-6">
                <label asp-for="IdCita">Estado de transaccion</label>
                @Html.DropDownListFor(m => m.IdCita, (IEnumerable<SelectListItem>)ViewBag.Citas, "Elige la cita", new { @class = "form-control", id = "roleSelect" })
                <span asp-validation-for="IdCita" class="text-danger"></span>
            </div> *@
            <div class="mb-3 col-lg-6">
                <label asp-for="Monto">Monto</label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Fecha">Fecha</label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Comentario">Comentario</label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>