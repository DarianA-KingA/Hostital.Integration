@{
}
<form method="post" asp-controller="Servicios" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Detalles servicio
            </h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All" class="alert alert-danger" ></div> *@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Estado" />
        <div class="row">
            <div class="mb-3 col-lg-6">
                <label asp-for="IdTipoServico">Tipo Servicio</label>
                @Html.DropDownListFor(m => m.IdTipoServico, (IEnumerable<SelectListItem>)ViewBag.tipoServicio, "Elige un area tipo de servicio", new { @class = "form-control", id = "roleSelect", @disabled = "disabled" })
                <span asp-validation-for="IdTipoServico" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="IdAreaMedica">Area medica</label>
                @Html.DropDownListFor(m => m.IdAreaMedica, (IEnumerable<SelectListItem>)ViewBag.areasMedicas, "Elige un area medica", new { @class = "form-control", id = "roleSelect", @disabled = "disabled" })
                <span asp-validation-for="IdAreaMedica" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Costo">Descripcion</label>
                <input asp-for="Costo" class="form-control" disabled />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
        </div>

        <a asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>